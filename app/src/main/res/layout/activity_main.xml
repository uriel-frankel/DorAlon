<?xml version="1.0" encoding="utf-8"?>
<frankel.uriel.doralon.FirstScreenLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/hp" />

    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/stationList"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/st_list_home" />

        <Button
            android:id="@+id/sales"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/st_sales_home" />
    </LinearLayout>
</frankel.uriel.doralon.FirstScreenLayout>